<aura:component extends="ui:dialog" model="java://print.SettingsModel" controller="java://print.SettingsController">
    <aura:set attribute="title" value="Settings"/>
    <aura:set attribute="description" value="Settings dialog"/>
    <aura:set attribute="clickOutToClose" value="false"/>
    <div class="settingsContent">
        <ui:inputSelect label="Machine:" aura:id="machine">
            <aura:iteration items="{#m.machineTypes}" var="machine">
                <aura:if isTrue="{!machine == m.currentMachine}">
                    <ui:inputSelectOption label="{!machine}" text="{!machine}" value="true"/>
                    <aura:set attribute="else">
                        <ui:inputSelectOption label="{!machine}" text="{!machine}"/>
                    </aura:set>
                </aura:if>

            </aura:iteration>
        </ui:inputSelect>
        <ui:inputText aura:id="port" label="Port:" value="{#m.currentPort}"/>
    </div>
    <aura:set attribute="buttons">
        <ui:dialogButtons defaultButtons="cancel">
            <ui:button label="Save" press="{!c.onSave}"/>
        </ui:dialogButtons>
    </aura:set>
</aura:component>